{
	"name": "@kishornaik/utils",
	"version": "1.0.12",
	"description": "Utility functions for express js tsoa boilerplate",
	"main": "dist/core/index.js",
	"type": "commonjs",
  "author": "Kishor Chandrakant Naik",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/KishorNaik/utils.git"
  },
  "homepage": "https://github.com/KishorNaik/expressjs_tsoa_boilerplate",
  "bugs": {
		"url": "https://github.com/KishorNaik/utils/issues"
	},
  "readme": "https://github.com/KishorNaik/expressjs_tsoa_boilerplate/blob/main/README.md",
	"engines": {
		"node": ">= 14 <= 24"
	},
	"scripts": {
		"start": "cross-env NODE_ENV=production node dist/core/index.js",
		"start:build": "npm run clean && npx tsc && tsc-alias && swc src -d dist --source-maps --copy-files",
		"start:dev": "cross-env NODE_ENV=development node dist/core/index.js",
		"start:local": "npm run build && cross-env NODE_ENV=development node dist/core/index.js",
		"build:dev": "npm run clean && npm run build:tsc && npm run prettier && swc src -d dist --source-maps --copy-files",
		"build": "npm run clean && npm run build:tsc && npm run prettier && swc src -d dist --source-maps --copy-files",
		"build:tsc": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -w -p tsconfig.build.json",
		"lint": "eslint . --ext .ts --ext .mts",
		"test": "glob -c \"node --trace-deprecation --no-warnings --test --require ts-node/register -r tsconfig-paths/register\" \"./src/test/**/*.test.ts\"",
		"prettier": "prettier --config .prettierrc --write .",
		"test:watch": "jest --watch",
		"clean": "rimraf dist",
		"prepublishOnly": "npm run build:tsc && npm run build",
		"publish-only": "npm run prepublishOnly && npm publish --ignore-scripts",
		"typeorm:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/core/config/dbMigrations/index.ts src/core/config/dbMigrations/migrations/init",
		"typeorm:migrate": "npx typeorm-ts-node-commonjs migration:run -d src/core/config/dbMigrations/index.ts",
		"typeorm:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/core/config/dbMigrations/index.ts",
		"prepare": "husky",
		"npm:outdated": "npm outdated",
		"npm:latest-package-update": "npx npm-check-updates -u"
	},

	"devDependencies": {
		"@faker-js/faker": "9.8.0",
		"@swc/cli": "0.7.8",
		"@swc/core": "1.13.5",
		"@types/autocannon": "7.12.7",
		"@types/bcrypt": "6.0.0",
		"@types/glob": "9.0.0",
		"@types/ioredis": "5.0.0",
		"@types/node": "24.5.2",
		"@types/sinon": "17.0.4",
		"autocannon": "8.0.0",
		"cross-env": "10.0.0",
		"expect": "30.1.2",
		"glob": "11.0.3",
		"husky": "9.1.7",
		"prettier": "3.6.2",
		"rimraf": "6.0.1",
		"sinon": "21.0.0",
		"standard-version": "9.5.0",
		"ts-api-utils": "2.1.0",
		"ts-node": "10.9.2",
		"ts-node-dev": "2.0.0",
		"tsconfig-paths": "4.2.0",
		"typescript": "5.9.2"
	},
	"dependencies": {
		"@faker-js/faker": "10.0.0",
		"@types/amqp-connection-manager": "3.4.5",
		"@types/amqplib": "0.10.7",
		"@types/cls-hooked": "4.3.9",
		"@types/opossum": "8.1.9",
		"@types/pg": "8.15.5",
		"@types/redis": "4.0.11",
		"amqp-connection-manager": "4.1.14",
		"amqplib": "0.10.9",
		"axios": "1.12.2",
		"bcrypt": "6.0.0",
		"bullmq": "5.58.7",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.2",
		"class-validator-jsonschema": "5.1.0",
		"cls-hooked": "4.2.2",
		"consul": "2.0.1",
		"cron": "4.3.3",
		"dotenv": "17.2.2",
		"envalid": "8.1.0",
		"guid-typescript": "1.0.9",
		"http-status-codes": "2.3.0",
		"ioredis": "5.8.0",
		"kafkajs": "2.2.4",
		"linq": "4.0.3",
		"mediatr-ts": "2.2.0",
		"neverthrow": "8.2.0",
		"opossum": "9.0.0",
		"pg": "8.16.3",
		"pusher": "5.2.0",
		"pusher-js": "8.4.0",
		"redis": "5.8.2",
		"reflect-metadata": "0.2.2",
		"typedi": "0.10.0",
